<?xml version="1.0" encoding="UTF-8"?>
<businessContext prefix="product" name="changePrice">
    <includedContexts>
        <includedContext prefix="auth" name="adminLoggedIn" />
    </includedContexts>
    <preconditions>
        <precondition name="Sell price must be greater than cost price">
            <condition>
                <numericGreaterThan>
                    <left>
                        <objectPropertyReference objectName="product" propertyName="sellPrice" type="number" />
                    </left>
                    <right>
                        <objectPropertyReference objectName="product" propertyName="costPrice" type="number" />
                    </right>
                </numericGreaterThan>
            </condition>
        </precondition>
    </preconditions>
    <postConditions />
</businessContext>
